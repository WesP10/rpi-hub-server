# Hub Configuration
HUB_ID=rpi-bridge-01
SERVER_ENDPOINT=ws://your-server-endpoint:8080/hub
DEVICE_TOKEN=your-device-token-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Serial Configuration
DEFAULT_BAUD_RATE=9600
PORT_SCAN_INTERVAL=2
CONNECTION_RETRY_ATTEMPTS=3

# Buffer Configuration
BUFFER_SIZE_MB=10
BUFFER_WARN_THRESHOLD=0.8

# Health Reporter Configuration
HEALTH_REPORT_INTERVAL=30

# Storage Paths
ARTIFACT_CACHE_PATH=/tmp/rpi-hub-artifacts
ARTIFACT_RETENTION_HOURS=24
PORT_MAPPING_FILE=/var/lib/rpi-hub/port_mappings.json
LOG_DIRECTORY=/var/log/rpi-hub

# Logging
LOG_LEVEL=INFO
